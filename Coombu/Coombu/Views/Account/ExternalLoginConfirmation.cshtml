@model Coombu.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = ViewRes.AccountStrings.ExternalLoginConfirmationPageTitle;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@string.Format(ViewRes.AccountStrings.ExternalLoginConfirmationHeader, ViewBag.ProviderDisplayName)</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ViewRes.AccountStrings.ExternalLoginConfirmationFormLegend</legend>
        <p>
            @string.Format(ViewRes.AccountStrings.ExternalLoginConfirmationMessage,ViewBag.ProviderDisplayName)
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="@ViewRes.AccountStrings.ExternalLoginConfirmationFormSubmitButtonTitle" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
